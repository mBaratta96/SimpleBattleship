{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ compila il file attivo",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${fileDirname}/../**.cpp",
				"-o",
				"${fileDirname}/../main.out"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compilatore: /usr/bin/g++"
		}
	]
}